generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  assignments Assignment[]
  subjects    Subject[]
  todos       Todo[]
}

model Subject {
  id          String  @id @default(cuid())
  userId      String
  name        String
  calculation String
  grade       Grade[]
  user        User    @relation(fields: [userId], references: [id])
}

model Grade {
  id        String  @id @default(cuid())
  subjectId String
  label     String
  weight    Int
  value     Decimal
  subject   Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)
}

model Assignment {
  id       String @id @default(cuid())
  userId   String
  subject  String
  deadline String
  title    String
  user     User   @relation(fields: [userId], references: [id])
}

model Todo {
  id          String  @id @default(cuid())
  userId      String
  title       String
  description String
  isComplete  Boolean
  user        User    @relation(fields: [userId], references: [id])
}
